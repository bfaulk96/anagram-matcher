{
  "name": "anagram-matcher",
  "version": "1.0.0",
  "description": "Checks sentences for anagram matches",
  "repository": "https://github.com/bfaulk96/anagram-matcher",
  "main": "src/index.ts",
  "author": "Brandon Faulkner",
  "license": "ISC",
  "keywords": [
    "anagram",
    "matcher",
    "sentence",
    "word",
    "letters"
  ],
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --fix",
    "format": "prettier --write **/*.{js,ts}"
  },
  "devDependencies": {
    "@types/node": "^14.11.8",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ]
  }
}
